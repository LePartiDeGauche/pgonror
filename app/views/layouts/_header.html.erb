<section id="tools">  <section id="searchbar">    <%= form_tag global_search_path, :method => :get do %>      <%= search_field_tag :search, @search, :placeholder => t('action.search'), :id => "search" %>      <%= submit_tag t('action.search'), :data => { disable_with: t('action.wait') } %>    <% end %>  </section>  <section id="usermenu">    <%= render :partial => 'layouts/user_menu' %>  </section></section><div id="identity"><%= render :partial => (@identity_layout == 'tele') ? 'videos/identity' : ((@identity_layout == 'radio') ? 'podcast/identity' : 'layouts/identity') %></div>
<% if not @hide_main_menu %><nav id="nav"><%= render :partial => 'layouts/main_menu' %></nav><% end %>