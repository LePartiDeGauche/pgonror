<% cache_if can_cache?, 'user_menu' do %>
  <% if user_signed_in? %>
    <% if current_user.administrator %><%= link_to_unless_current t('general.administration'), users_path %>&nbsp;&bull;<% end %>
    <% if current_user.publisher %><%= link_to_unless_current t('general.content'), articles_path %>&nbsp;&bull;<% end %>
    <%= render :partial => 'layouts/logged_user_menu' %>&bull;
  <% end %>
  <span title="<%= t('identity.follow_fb') %>">
              <a href="<%= t 'identity.follow_fb_link' %>" rel="publisher" target="_blank">
                <img src="<%= asset_path 'f_logo.png' %>" 
                     alt="<%= t 'identity.follow_fb' %>" 
                     width="16" height="16"></a>
  </span>
  <span style="text-align:center;" title="<%= t('identity.follow_tw') %>">
              <a href="<%= t 'identity.follow_tw_link' %>" rel="publisher" target="_blank">
                <img src="<%= asset_path 'twitter2.png' %>" 
                     alt="<%= t 'identity.follow_tw' %>" 
                     width="16" height="16"></a>
  </span>
  <span title="<%= t('identity.follow_gp') %>">
              <a href="<%= t 'identity.profile_googleplus' %>" rel="publisher" target="_blank">
                <img src="<%= asset_path 'GooglePlus-new_logo.png' %>" 
                     alt="<%= t 'identity.follow_gp' %>" 
                     width="16" height="16"></a>
  </span>&nbsp;&bull;
  <span title="<%= t('identity.rss_explain') %>"><%= link_to icon_medium('rss.png'), accueil_rss_path %></span>&nbsp;&bull;
  <span title="<%= t('identity.txt_explain') %>"><%= link_to '.txt', export_txt_path %></span>
<% end %>