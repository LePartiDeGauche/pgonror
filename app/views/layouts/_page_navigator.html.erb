<% if @pages > 1 %>  <div class="pages">    <% if @page > 1 %>      <%= link_to t('action.previous'), :page => @page-1, :heading => @page_heading, :search => @search %>    <% end %>    <% for page in (1..@pages) %>      <% if (page - @page < 10) and (@page - page < 10) %>        <% if page != @page %>          <%= link_to page.to_s, :page => page, :heading => @page_heading, :search => @search %>        <% end %>        <%= page.to_s if page == @page %>      <% end %>    <% end %>    <% if @page < @pages %>      <%= link_to t('action.next'), :page => @page+1, :heading => @page_heading, :search => @search %>    <% end %>  </div><% end %>