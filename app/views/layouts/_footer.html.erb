 }(document,"script","twitter-wjs");            </script>          </div>        </article>      </section>    </section>    <section id="agauche">      <section id="agauche-content" class="content-bloc highlighted-bloc">        <article class="article">          <header>            <h3 class="category"><%= t('identity.agauche') %>&nbsp;&bull;</h3>          </header>          <a href="/agauche" title="<%= t('identity.agauche_title') %>">            <img src="<%= asset_path 'Abonnement.png' %>"                  alt="<%= t('identity.agauche') %>"                  width="210"                 height="98">          </a>        </article>      </section>    </section>    <section id="gavroche">      <section id="gavroche-content" class="content-bloc highlighted-bloc">        <article class="article">          <header>            <h3 class="category"><%= t('identity.gavroche') %>&nbsp;&bull;</h3>          </header>          <%= link_to_unless_current t('identity.gavroche_title'), '/gavroche' %>        </article>      </section>    </section>  <% end %></section>