<section id="actualites-liste">
  <section class="content-bloc">
    <%= render :partial => 'layouts/article' %>
  </section>
  <% unless @attached_articles.nil? or @attached_articles.empty? %>
    <section class="content-bloc">
      <h1><%= t("action.article.attached") %>&nbsp;&bull;</h1>
      <%= render :partial => 'layouts/articles_1col_2_on_3_search', :locals => { :articles => @attached_articles } %>
    </section>
  <% end %>
</section>
<section id="actualites-vignettes">
  <%= render :partial => 'layouts/source' %>
  <% unless @side_articles.nil? or @side_articles.empty? %>
    <% for articles in @side_articles %>
      <section class="content-bloc">
        <%= render :partial => 'layouts/articles_1col_1_on_3_picture', :locals => { :articles => articles } %>
      </section>
    <% end %>
  <% end %>
</section>