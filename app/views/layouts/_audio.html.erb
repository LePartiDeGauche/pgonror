<center itemprop="audio">  <br/>  <object type="application/x-shockwave-flash" data="/swf/dewplayer.swf" width="300" height="20" class="player-fallback">    <param name="movie" value="/swf/dewplayer.swf" />    <param name="flashvars" value="mp3=<%= article.document.url(:default, false) %>" />    <param name="wmode" value="transparent" />  </object>  <audio controls="controls" src="<%= article.document.url(:default, false) %>" type="<%= article.document_content_type %>"></audio>  <br/>  <%= link_to article.document.url(:default, false), :target => '_blank' do %>    <%= t('action.download_audio') %>    (<%= t("activerecord.attributes.article.duration") %> :    <%= article.mp3_duration %> &bull;    <%= number_to_human_size article.document_file_size %> &bull;    <%= article.document_content_type %>)    <br/>  <% end %>  <br/></center>