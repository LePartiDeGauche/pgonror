<center itemprop="audio">  <br/>  <audio controls>    <source src="<%= article.audio.url(:original, false) %>" type="audio/mpeg; codecs=mp3">    <source src="<%= article.audio.url(:ogg, false).gsub(/mp3$/, "ogg") %>" type="audio/ogg; codecs=vorbis">    <object type="application/x-shockwave-flash" data="/swf/dewplayer.swf" width="300" height="20">      <param name="movie" value="/swf/dewplayer.swf" />      <param name="flashvars" value="mp3=<%= article.audio.url(:original, false) %>" />      <param name="wmode" value="transparent" />    </object>  </audio>  <br/>  <%= t('action.download_audio') %>  (<%= t("activerecord.attributes.article.duration") %> :  <%= article.mp3_duration %> &bull;  <%= number_to_human_size article.audio_file_size %>) &bull;  <%= link_to article.download_path(article.audio.name, :original, 'mp3') do %>    <%= article.audio.content_type %>  <% end %> &bull;  <%= link_to article.download_path(article.audio.name, :ogg, 'ogg') do %>    audio/ogg  <% end %>  <br/></center>
