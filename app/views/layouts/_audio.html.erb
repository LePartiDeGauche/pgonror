<center itemprop="audio">  <br/>  <div id="ap_container_1"></div>  <script type="text/javascript">  <%= render :partial => 'layouts/audio_script', :formats => [:js], :locals => {:article => @article} %>  </script>  <br/>  <%= t('action.download_audio') %>  (<%= t("activerecord.attributes.article.duration") %> :  <%= article.mp3_duration %> &bull;  <%= number_to_human_size article.audio_file_size %>) &bull;  <%= link_to 'mp3', article.download_path(article.category_option(:storage), 'mp3') %> &bull;  <%= link_to 'ogg', article.download_path(article.category_option(:storage), 'ogg') %>  <br/></center>
