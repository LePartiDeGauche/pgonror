<section id="search-list">
  <section class="content-bloc">
    <hgroup>
      <h3 class="category"><%= t('action.search_list') %></h3>&nbsp;&bull;
      <%= @search %>
    </hgroup>
    <% unless @pages == 0 %>
      <%= render :partial => 'layouts/articles_1col_2_on_3_search',
                 :locals => { :articles => @articles } %>
    <% else %>
      <ol><%= t('article.empty') %></ol>
    <% end %>
  </section>
</section>
<section id="search-vignettes">
  <% unless @side_articles.nil? or @side_articles.empty? %>
    <% for articles in @side_articles %>
      <section class="content-bloc bloc-bottom-margin">
        <%= render :partial => 'layouts/articles_1col_1_on_3_picture', :locals => { :articles => articles } %>
      </section>
    <% end %>
  <% end %>
</section>