<section class="content-bloc">  <% unless @sources.nil? %>    <p>      <% for article in @sources %>          <small>            <%= link_to_unless_current article.title_display.html_safe,                  :controller => article.category_option(:controller),                  :action => article.category_option(:action),                  :uri => article.uri %>          </small><br/>      <% end %>    </p>  <% end %></section>