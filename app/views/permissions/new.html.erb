<section class="content-bloc">
  <%= form_for([@user, @permission]) do |f| %>
    <article class="article">
      <aside class="actions">
				<%= t('action.permission.create') %> |
				<%= link_to t('action.cancel'), @user %> |
				<%= f.submit t('action.ok'), :disable_with => t('action.wait') %>
			</aside>
      <%= render :partial => 'layouts/error_messages', :locals => { :item => @permission } %>
      <header>
        <h3 class="category">
          <%= t('activerecord.attributes.user.permission') %>&nbsp;&bull;
        </h3>
        <h1>
          <%= @user.email%>
        </h1>
      </header>  
      <%= render :partial => 'edit', :locals => { :f => f } %>
    </article>
  <% end %>
</section>