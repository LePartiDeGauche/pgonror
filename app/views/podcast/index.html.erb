<section id="videos-liste">
  <section class="content-bloc">
    <div class="rss"><%= link_to icon_medium('rss.png'), podcast_feed_path, :target => "_blank" %></div>
    <%= render :partial => 'layouts/articles_1col_2_on_3', :locals => { :articles => @articles } %>
  </section>
</section>
<section id="videos-vignettes">
  <% unless @headings.empty? %>
    <section class="content-bloc">
      <%= render :partial => 'layouts/table_of_content', 
            :locals => { :headings => @headings, :articles => @articles } %>
    </section>
  <% end %>
  <section class="content-bloc">
    <%= render :partial => 'layouts/articles_1col_1_on_3_picture', :locals => { :articles => @editos } %>
  </section>
  <section class="content-bloc">
    <%= render :partial => 'layouts/articles_1col_1_on_3_picture', :locals => { :articles => @actus } %>
  </section>
</section>