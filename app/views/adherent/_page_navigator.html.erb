<% if @pages > 1 %>  <div class="pages">    <% if @page > 1 %>      <%= link_to t('action.previous'),                  :action => :index,                  :page => @page-1,                  :category => @category,                  :search => @search %>    <% end %>    <% for page in (1..@pages) %>      <% if (page - @page < 10) and (@page - page < 10) %>        <% if page != @page %>          <%= link_to page.to_s,                       :action => :index,                      :page => page,                      :category => @category,                      :search => @search %>        <% end %>        <%= page.to_s if page == @page %>      <% end %>    <% end %>    <% if @page < @pages %>      <%= link_to t('action.next'),                  :action => :index,                  :page => @page+1,                  :category => @category,                  :search => @search %>    <% end %>  </div><% end %>