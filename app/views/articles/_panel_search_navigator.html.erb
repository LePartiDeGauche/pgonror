<% if @pages_searched_articles > 1 %>  <div class="pages">    <% if @page_searched_articles > 1 %>      <a id="previous-page"><%= t('action.previous') %></a>      <script>        $("#previous-page").click(function (event){          $(this).html('<%= t('action.wait') %>');          $("#panel-search-list").load(            "<%= url_for({:action => :panel_search_page,                          :page => @page_searched_articles-1,                           :panel_search => @panel_search,                          :category_panel_search => @category_panel_search,                          :parent_panel_search => @parent_panel_search}) %>"          );        });      </script>    <% end %>    <% for page in (1..@pages_searched_articles) %>      <% if (page - @page_searched_articles < 2) and (@page_searched_articles - page < 2) %>        <% if page != @page_searched_articles %>          <a id="<%= 'goto-page' + page.to_s %>"><%= page.to_s %></a>          <script>            $("#goto-page" + <%= page.to_s %>).click(function (event){              $(this).html('<%= t('action.wait') %>');              $("#panel-search-list").load(                "<%= url_for({:action => :panel_search_page,                              :page => page,                               :panel_search => @panel_search,                              :category_panel_search => @category_panel_search,                              :parent_panel_search => @parent_panel_search}) %>"              );            });          </script>        <% end %>        <%= page.to_s if page == @page_searched_articles %>      <% end %>    <% end %>    <% if @page_searched_articles < @pages_searched_articles %>      <a id="next-page"><%= t('action.next') %></a>      <script>        $("#next-page").click(function (event){          $(this).html('<%= t('action.wait') %>');          $("#panel-search-list").load(            "<%= url_for({:action => :panel_search_page,                          :page => @page_searched_articles+1,                          :panel_search => @panel_search,                          :category_panel_search => @category_panel_search,                          :parent_panel_search => @parent_panel_search}) %>"          );        });      </script>    <% end %>  </div><% end %><script>  $(".remote-action").click(function (event){    $(this).html('<%= escape_javascript(t('action.wait')) %>');  });</script>