<% if @pages > 1 %>  <div class="pages">    <% if @page > 1 %>      <%= link_to t('action.previous'),                          :action => :index,                          :page => @page-1,                          :category => @category,                          :status => @status,                          :zoom => @zoom,                          :zoom_video => @zoom_video,                          :log => @log,                          :parent => @parent,                          :search => @search %> &nbsp;    <% end %>    <% for page in (1..@pages) %>      <% if (page - @page < 10) and (@page - page < 10) %>        <% if page != @page %>          <%= link_to page.to_s,                           :action => :index,                          :page => page,                          :category => @category,                          :status => @status,                          :zoom => @zoom,                          :zoom_video => @zoom_video,                          :log => @log,                          :parent => @parent,                          :search => @search %>        <% end %>        <%= page.to_s if page == @page %>      <% end %>    <% end %>    <% if @page < @pages %>      &nbsp; <%= link_to t('action.next'),                          :action => :index,                          :page => @page+1,                          :category => @category,                          :status => @status,                          :zoom => @zoom,                          :zoom_video => @zoom_video,                          :log => @log,                          :parent => @parent,                          :search => @search %>    <% end %>  </div><% end %>