<div class="information"><%=t "action.article.search_explain" %></div><aside class="actions">  <%= form_tag(panel_search_articles_path,                  :method => :get,                  :category => @category,                  :status => @status,                  :remote => true,                  :id => 'panel-search-form') do %>    <%= select_tag 'parent_panel_search',                   options_for_select(@folders, @parent_panel_search),                   :include_blank => true,                   :style => 'width: 290px;' %>    <%= select_tag 'category_panel_search',                   options_for_select(@categories, @category_panel_search),                   :include_blank => true,                   :style => 'width: 290px;' %>    <%= search_field_tag :panel_search,                         @panel_search,                         :placeholder => t('action.search') %>    <%= submit_tag t('action.search'), :disable_with => t('action.wait') %>  <% end %>  <script>    $(document).ready(function(){      var output = "#panel-search-list";      $('#panel-search-form')        .bind("ajax:beforeSend", function(evt, xhr, settings){        })        .bind("ajax:success", function(evt, data, status, xhr){          $(output).html(xhr.responseText);        })        .bind("ajax:error", function(evt, xhr, status, error){          var errors, errorText;          try {            errors = $.parseJSON(xhr.responseText);          } catch(err) {            errors = {message: err};          }          errorText = "<ul>";          for( error in errors ) {            errorText += "<li>" + errors[error] + "</li> ";          }          errorText += "</ul>";          $(output).html(errorText);        });    });  </script></aside>