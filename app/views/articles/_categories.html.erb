<ol>  <% if zoom > 0 %>    <li>        &nbsp;&nbsp;        <%= icon icon if important %>        <%= link_to_unless_current I18n.t('activerecord.attributes.article.zoom'),                :action => :index,                :zoom => true,                :status => status %>        <small>(<%= zoom %>)</small>    </li>  <% end %>  <% for category in categories %>    <li>        &nbsp;&nbsp;        <%= icon icon if important %>        <%= link_to_unless_current "#{category[1]}",                :action => :index,                :category => category[0],                :status => status %>        <small>(<%= category[2] %>)</small>    </li>  <% end %></ol>