<h3 class="category">  <%= t('activerecord.attributes.article.tags') %>&nbsp;&bull;</h3><div class="tag">  <% for tag in @article.tags %>    <%= link_to tag.tag.html_safe,            :controller => :articles,            :action => :index,            :status => :all,            :search => tag.tag %>    <%= link_to icon('remove.gif'),                      {:controller => :tags, :article_id => @article.id, :id => tag.id, :action => "destroy"},                      :method => :delete %>    <br/>  <% end %></div><aside class="actions">  <%= link_to icon('plus.gif') + ' ' + t('action.tag.create'),                 :controller => :tags,                 :action => :new,                 :article_id => @article.id %></aside>